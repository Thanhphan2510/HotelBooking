<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.StartLoginActivity"
    android:padding="15dp">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="HotelBooking"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/login_google_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continute with Google"
        app:layout_constraintTop_toBottomOf="@id/textView"
        android:layout_marginTop="200dp"/>
    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_facebook_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continute with Facebook"
        app:layout_constraintTop_toBottomOf="@id/login_google_btn"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/login_hotelbooking_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in with account hotelbooking"
        app:layout_constraintTop_toBottomOf="@id/login_facebook_btn"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="------- Or -------"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/login_hotelbooking_btn"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/create_account_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create your account"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/exit_tv"
        android:layout_width="42dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:text="x"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


