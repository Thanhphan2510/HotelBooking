<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CreateAccountHB">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="236dp"
        tools:layout_editor_absoluteY="30dp">

        <ImageView
            android:layout_width="141dp"
            android:layout_height="108dp"
            android:layout_gravity="center"
            android:layout_marginTop="137dp"
            android:background="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/username_create_account_HB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:background="@null"
                android:hint="USER NAME"
                android:textColor="#ffbdbdc3"
                android:textSize="13sp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/line" />

            <EditText
                android:id="@+id/password_create_account_HB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="37dp"
                android:background="@null"
                android:hint="PASSWORD"
                android:textColor="#ffbdbdc3"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/line" />
            <EditText
                android:id="@+id/password2_create_account_HB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="37dp"
                android:background="@null"
                android:hint="RE-PASSWORD"
                android:textColor="#ffbdbdc3"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/line" />
            <Button
                android:id="@+id/signup_button_create_account_HB"
                android:layout_width="154dp"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@drawable/shapebuttonsign"
                android:text="SIGN UP"
                android:textColor="#ffd3bd84"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/skipview"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="SKIP"
                android:textColor="#ff9f9fa5"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>