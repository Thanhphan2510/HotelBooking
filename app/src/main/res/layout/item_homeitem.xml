<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:orientation="horizontal"
        android:clickable="false"
        android:focusable="false">

        <ImageView
            android:id="@+id/image_homeitem"
            android:layout_width="162dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name_homeitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vonga Hotel"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/ratingbar_homeitem"
                style="@style/ImageRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-15dp"
                android:layout_marginTop="8dp"
                android:isIndicator="true"
                android:numStars="5"
                android:scaleX="0.75"
                android:scaleY="0.75" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <TextView
                    android:id="@+id/des1_homeitem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price for 3 night, 2 adults"
                    android:textColor="#5C5A5A"
                    android:textSize="12dp"
                    android:layout_marginTop="6dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                     />

                <TextView
                    android:id="@+id/des2_homeitem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Single Room"
                    android:textColor="#5C5A5A"
                    android:textSize="12dp"
                    android:layout_marginTop="7dp"
                    app:layout_constraintTop_toBottomOf="@id/des1_homeitem"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/price_homeitem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VND 220,000"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/des2_homeitem"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/des3_homeitem"
                    android:layout_width="151dp"
                    android:layout_height="wrap_content"
                    android:text="Include taxes and charge
                        \nFREE cancellation
                        \nNo prepayment needed "
                    android:textColor="#5C5A5A"
                    android:textSize="12dp"
                    android:layout_marginTop="6dp"
                    app:layout_constraintTop_toBottomOf="@id/price_homeitem"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>