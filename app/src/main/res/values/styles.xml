<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">#FEFFFF</item>
    </style>

    <style name="ImageRatingBar" parent="Base.Widget.AppCompat.RatingBar">
    <item name="android:progressDrawable">@drawable/ratingbar_selector</item>
        <item name="android:color">@android:color/holo_orange_light</item>
    <item name="android:minHeight">20dp</item>
    <item name="android:maxHeight">50dp</item>
    </style>
    <style name="AppTheme_1" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>
